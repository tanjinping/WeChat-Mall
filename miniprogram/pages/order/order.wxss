.order-one {
  width: 750rpx;
  margin-top: 30rpx;
}

.commodity-one:not(:first-child) {
  border-top: 1px solid black;
}

.order-false {
  margin-top: 100rpx;
  text-align: center;
}

.commodity-assess {
  background:yellow;
  height: 70rpx;
  width: 150rpx; 
  line-height: 70rpx;
  text-align: center;
  border-radius: 5rpx;
}

.commodity-assess-false {
  background:gray;
}

.commodity-one {
  font-size: 30rpx;
  height: 250rpx;
  width: 700rpx;
  background: #fff;
  margin: auto;
  display: flex;
  position: relative;
}

.commodity-one image {
  height: 200rpx;
  width: 200rpx;
  margin: 25rpx;
}

.commodity-one-msg {
  margin-top: 25rpx;
}

.commodity-one-right {
    position: absolute;
    height: 100%;
    right: 0;
    margin-right: 25rpx;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-around;
}